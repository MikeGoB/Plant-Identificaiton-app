<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Identification Training</title>
    <style>
        /* Add your CSS styles here */
    </style>
</head>
<body>
    <h1>Plant Identification Training</h1>
    <div id="imageContainer">
        <img id="plantImage" src="" alt="Plant Image">
    </div>
    <div id="options">
        <!-- Options for user to choose -->
    </div>
    <button onclick="nextImage()">Next</button>

    <script>
        // Sample data - replace with your database or API calls
        const imagesData = [
            { imageUrl: 'path/to/image1.jpg', correctAnswer: 'Rose' },
            { imageUrl: 'path/to/image2.jpg', correctAnswer: 'Daisy' },
            // Add more data as needed
        ];

        let currentIndex = 0;

        // Function to load the next image and options
        function nextImage() {
            if (currentIndex < imagesData.length) {
                const currentImage = imagesData[currentIndex];
                document.getElementById('plantImage').src = currentImage.imageUrl;
                
                // Create options for the user
                const optionsContainer = document.getElementById('options');
                optionsContainer.innerHTML = '';
                const options = ['Rose', 'Daisy', 'Tulip', 'Sunflower']; // Replace with your actual options
                options.forEach(option => {
                    const button = document.createElement('button');
                    button.textContent = option;
                    button.onclick = () => checkAnswer(option, currentImage.correctAnswer);
                    optionsContainer.appendChild(button);
                });

                currentIndex++;
            } else {
                alert('Training completed!');
            }
        }

        // Function to check the user's answer
        function checkAnswer(userAnswer, correctAnswer) {
            if (userAnswer === correctAnswer) {
                alert('Correct!');
            } else {
                alert(`Incorrect. The correct answer is ${correctAnswer}`);
            }
            nextImage();
        }

        // Load the first image on page load
        window.onload = nextImage;
    </script>
</body>
</html>
